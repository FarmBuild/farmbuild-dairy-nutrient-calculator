{
  "name": "farmbuild-dairy-nutrient-calculator",
  "private": true,
  "version": "0.0.8",
  "description": "This project is the dairy nutrient calculator module of farm build JavaScript library",
  "repository": "https://github.com/FarmBuild/farmbuild-dairy-nutrient-calculator",
  "license": "MIT",
  "devDependencies": {
    "karma": "~0.10",
    "protractor": "^1.1.1",
    "http-server": "^0.6.1",
    "bower": "^1.3.1",
    "shelljs": "^0.2.6",
    "karma-junit-reporter": "^0.2.2",
    "minami": "~1.1.0",
    "jsdoc": "3.3.0-beta3",
    "uglify-js": "2.4.19",
    "jshint": "2.6.3",
    "ncp": "2.0.0"
  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
    "start": "http-server -a localhost -p 8000 -c-1",
    "pretest": "npm install",
    "test": "karma start karma.conf.js",
    "test-single-run": "karma start karma.conf.js  --single-run",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor protractor.conf.js",
    "clean": "rm -rf dist/* & rm -rf docs/*",
    "generate-docs": "node_modules/.bin/jsdoc --configure .jsdoc.json",
    "jshint": " node_modules/.bin/jshint -c .jshintrc --filename src/**/*-src.js src/nutrient-calculator.js --verbose --show-non-errors",
    "concat": "uglifyjs src/nutrient-calculator.js src/**/*.src.js src/*.src.js src/index.js -o dist/farmbuild-nutrientcalculator.js -v -b",
    "uglify": "uglifyjs dist/farmbuild-nutrientcalculator.js --source-map dist/farmbuild-nutrientcalculator.min.js.map --source-map-url farmbuild-nutrientcalculator.min.js.map -o dist/farmbuild-nutrientcalculator.min.js -v -c",
    "copy-core": "ncp bower_components/farmbuild-core/dist/ dist/ && ncp bower_components/farmbuild-farmdata/dist/ dist/",
    "dist": "npm run clean && npm run generate-docs && npm run concat && npm run uglify && npm run copy-core"
  }
}
